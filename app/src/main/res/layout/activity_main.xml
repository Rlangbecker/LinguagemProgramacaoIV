<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_vw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:text="@string/como_seu_nome"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="90dp"
        android:background="@color/white"
        android:hint="Insira seu nome"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@id/main_vw"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="@id/main_vw"
        app:layout_constraintTop_toTopOf="@id/main_vw" />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/button_ok"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="160dp"
        android:onClick="sendMessage"
        android:text="Ok"
        app:layout_constraintEnd_toEndOf="@id/main_vw"
        app:layout_constraintStart_toStartOf="@id/main_vw"
        app:layout_constraintTop_toTopOf="@id/main_vw" />

    <TextView
        android:id="@+id/tview_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:text="@string/seu_nome"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/button_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editview"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/button_limpar"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="200dp"
        android:onClick="limparCampo"
        android:text="Limpar"
        app:layout_constraintEnd_toEndOf="@id/main_vw"
        app:layout_constraintStart_toStartOf="@id/main_vw"
        app:layout_constraintTop_toTopOf="@id/main_vw" />


</androidx.constraintlayout.widget.ConstraintLayout>