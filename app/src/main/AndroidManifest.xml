<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FundatecHeroesTI21"
        tools:targetApi="31">
        <activity
            android:name=".splashScreen.view.SplashScreenActivity"
            android:exported="false" />
        <activity
            android:name=".character.view.CharcaterActivity"
            android:exported="false" />
        <activity
            android:name=".profile.view.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".home.view.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".login.view.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".splashScreen.SplashScreenLayout"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>